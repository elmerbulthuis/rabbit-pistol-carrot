{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TypeScript file",
      "program": "${file}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/transpiled/**/*.js"],
      "preLaunchTask": "tsc-watch",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Feature file",
      "runtimeExecutable": "npx",
      "program": "cucumber-js",
      "args": ["--profile", "debug", "${file}"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}//transpiled/**/*.js"],
      "preLaunchTask": "tsc-watch",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Coverage",
      "runtimeExecutable": "npm",
      "args": ["run", "coverage"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}//transpiled/**/*.js"],
      "preLaunchTask": "tsc-watch",
      "outputCapture": "std"
    }
  ]
}
